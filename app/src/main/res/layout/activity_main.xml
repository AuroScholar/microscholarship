<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"


        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/bt_sdk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@color/color_red"
            android:padding="10dp"
            android:text="Student SDK"
            android:visibility="visible"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/bt_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_sdk"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/color_red"
            android:padding="10dp"
            android:text="Teacher SDk"
            android:textColor="@color/white"
            android:visibility="visible" />


        <EditText
            android:id="@+id/mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:inputType="phone"
            android:maxLength="10"
            android:hint="Please Enter Your Mobile Number"
            android:layout_below="@+id/bt_open"/>

        <EditText
            android:id="@+id/user_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:inputType="phone"
            android:maxLength="2"
            android:visibility="visible"
            android:hint="Please Enter class"
            android:layout_below="@+id/mobile_number"/>

        <EditText
            android:id="@+id/language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:inputType="text"
            android:maxLength="2"
            android:visibility="gone"
            android:hint="Please select Language"
            android:layout_below="@+id/user_class"/>

        <EditText
            android:id="@+id/utm_text_here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:inputType="text"
            android:visibility="gone"
            android:hint="Enter the UTM Link Here"
            android:layout_below="@+id/user_class"/>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/home_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />


    </RelativeLayout>
</layout>