    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toEndOf="@+id/regularTextView"
        app:layout_constraintTop_toTopOf="parent">

        <com.auro.scholr.core.util.uiwidget.RPTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/auro_theme_dark_blue"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            app:Font="Poppins-SemiBold.ttf"
            android:text="â‚¹150" />

        <com.auro.scholr.core.util.uiwidget.RPTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold"
            android:textColor="@color/auro_green_color"
            app:Font="Poppins-SemiBold.ttf"
            android:text="@string/approved"
           />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>