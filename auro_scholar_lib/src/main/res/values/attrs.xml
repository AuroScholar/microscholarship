<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HorizontalCalendarView">
        <!-- Default text color for all texts -->
        <attr name="textColorNormal" format="color" />
        <!-- Default top text color -->
        <attr name="colorTopText" format="color" />
        <!-- Default Middle text color -->
        <attr name="colorMiddleText" format="color" />
        <!-- Default Bottom text color -->
        <attr name="colorBottomText" format="color" />

        <!-- Selected item's text color for all texts -->
        <attr name="textColorSelected" format="color" />
        <!-- Selected item's top text color -->
        <attr name="colorTopTextSelected" format="color" />
        <!-- Selected item's Middle text color -->
        <attr name="colorMiddleTextSelected" format="color" />
        <!-- Selected item's Bottom text color -->
        <attr name="colorBottomTextSelected" format="color" />
        <!-- Selected item's background drawable -->
        <attr name="selectedDateBackground" format="reference" />

        <!-- Background color for selector bar. -->
        <attr name="selectorColor" format="color" />

        <!-- Top text size -->
        <attr name="sizeTopText" format="dimension" />
        <!-- Middle text size -->
        <attr name="sizeMiddleText" format="dimension" />
        <!-- Bottom text size -->
        <attr name="sizeBottomText" format="dimension" />

    </declare-styleable>



        <declare-styleable name="PanoramaImageView">
            <attr name="piv_enablePanoramaMode" format="boolean" />
            <attr name="piv_invertScrollDirection" format="boolean" />
            <attr name="piv_show_scrollbar" format="boolean" />
        </declare-styleable>
    <declare-styleable name="CropImageView">
        <attr name="cropGuidelines">
            <enum name="off" value="0"/>
            <enum name="onTouch" value="1"/>
            <enum name="on" value="2"/>
        </attr>
        <attr name="cropScaleType">
            <enum name="fitCenter" value="0"/>
            <enum name="center" value="1"/>
            <enum name="centerCrop" value="2"/>
            <enum name="centerInside" value="3"/>
        </attr>
        <attr name="cropShape">
            <enum name="rectangle" value="0"/>
            <enum name="oval" value="1"/>
        </attr>
        <attr name="cropAutoZoomEnabled" format="boolean"/>
        <attr name="cropMaxZoom" format="integer"/>
        <attr name="cropMultiTouchEnabled" format="boolean"/>
        <attr name="cropFixAspectRatio" format="boolean"/>
        <attr name="cropAspectRatioX" format="integer"/>
        <attr name="cropAspectRatioY" format="integer"/>
        <attr name="cropInitialCropWindowPaddingRatio" format="float"/>
        <attr name="cropBorderLineThickness" format="dimension"/>
        <attr name="cropBorderLineColor" format="color"/>
        <attr name="cropBorderCornerThickness" format="dimension"/>
        <attr name="cropBorderCornerOffset" format="dimension"/>
        <attr name="cropBorderCornerLength" format="dimension"/>
        <attr name="cropBorderCornerColor" format="color"/>
        <attr name="cropGuidelinesThickness" format="dimension"/>
        <attr name="cropGuidelinesColor" format="color"/>
        <attr name="cropBackgroundColor" format="color"/>
        <attr name="cropSnapRadius" format="dimension"/>
        <attr name="cropTouchRadius" format="dimension"/>
        <attr name="cropSaveBitmapToInstanceState" format="boolean"/>
        <attr name="cropShowCropOverlay" format="boolean"/>
        <attr name="cropShowProgressBar" format="boolean"/>
        <attr name="cropMinCropWindowWidth" format="dimension"/>
        <attr name="cropMinCropWindowHeight" format="dimension"/>
        <attr name="cropMinCropResultWidthPX" format="float"/>
        <attr name="cropMinCropResultHeightPX" format="float"/>
        <attr name="cropMaxCropResultWidthPX" format="float"/>
        <attr name="cropMaxCropResultHeightPX" format="float"/>
        <attr name="cropFlipHorizontally" format="boolean"/>
        <attr name="cropFlipVertically" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="DropDownView">
        <attr name="filter_height" format="dimension" />
        <attr name="filter_text_size" format="dimension"/>
        <attr name="filter_text_color" format="reference"/>
        <attr name="filter_bar_background_color" format="reference"/>
        <attr name="filter_text_arrow_padding" format="dimension"/>
        <attr name="arrow_width" format="dimension" />
        <attr name="arrow_height" format="dimension" />
        <attr name="arrow_drawable" format="reference" />
        <attr name="arrow_rotate" format="boolean" />
        <attr name="divider_height" format="dimension"/>
        <attr name="divider_color" format="reference" />
        <attr name="dropDownItem_height" format="dimension"/>
        <attr name="dropDownItem_text_size" format="dimension"/>
        <attr name="dropDownItem_text_size_selected" format="dimension"/>
        <attr name="dropDownItem_text_color" format="reference" />
        <attr name="dropDownItem_text_color_selected" format="reference"/>
        <attr name="dropDownItem_background_color" format="reference"/>
        <attr name="dropDownItem_background_color_selected" format="reference"/>
        <attr name="expand_dim_background" format="boolean"/>
        <attr name="dim_background_color" format="reference" />
        <attr name="expand_include_selected_item" format="boolean"/>
        <attr name="placeholder_text" format="string"/>
        <attr name="dropdown_typeface" format="reference"/>
        <attr name="dropdown_animation_duration" format="integer"/>
    </declare-styleable>
</resources>